<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/received_message_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/message_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/user_name"
            android:textColor="#cacaca" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/messenger_id_received"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/message_user_name"
            android:layout_margin="8dp"
            android:src="@drawable/post_user_placeholder" />

        <TextView
            android:id="@+id/message_received_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_user_name"
            android:layout_margin="8dp"
            android:layout_toEndOf="@+id/messenger_id_received"
            android:background="@drawable/chat_text_view_shape_2"
            android:elevation="10dp"
            android:padding="10dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sent_message_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/message_sent_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/chat_text_view_shape"
            android:elevation="10dp"
            android:padding="10dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>

</LinearLayout>